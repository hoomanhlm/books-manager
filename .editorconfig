# EditorConfig is awesome: https://editorconfig.org

# Set default settings for all files
[*]
charset = utf-8                # Use UTF-8 character encoding
end_of_line = lf               # Use LF for line endings (Unix-style)
insert_final_newline = true    # Ensure newline at end of file
trim_trailing_whitespace = true # Remove trailing whitespace

# Enforce tab indentation
indent_style = tab             # Use tabs for indentation
indent_size = 4                # Set tab size to 4 spaces (or as preferred)

# Specific settings for PHP files
[*.php]
indent_style = tab             # Use tabs for indentation in PHP files
indent_size = 4                # Tab size of 4 spaces in PHP files

# Settings for JSON files (JSON usually uses spaces)
[*.json]
indent_style = space           # Use spaces for JSON files
indent_size = 2                # Set indent size to 2 for JSON files
