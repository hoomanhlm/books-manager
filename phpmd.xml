<?xml version="1.0"?>
<ruleset name="BooksManagerRuleset">
    <description>Custom PHPMD ruleset for the Books Manager plugin.</description>

    <!-- The following rules have been enabled for code quality:
         - design.xml: Enforces design best practices.
         - naming.xml: Enforces consistent naming conventions.
         - unusedcode.xml: Identifies unused code.

         Additional rules, listed below, are currently commented out but can be enabled as needed:
         - codesize.xml: Checks for overly complex code structures.
         - cleancode.xml: Ensures clean and readable code.
         - controversial.xml: Flags controversial or non-standard practices.
    -->

    <!-- Uncomment these rules to enable additional checks as described above -->
    <!-- <rule ref="rulesets/codesize.xml" /> -->
    <!-- <rule ref="rulesets/cleancode.xml" /> -->
    <!-- <rule ref="rulesets/controversial.xml" /> -->

    <!-- Enabled rules -->
    <rule ref="rulesets/design.xml" />
    <rule ref="rulesets/naming.xml" />
    <rule ref="rulesets/unusedcode.xml" />

    <fileset>
        <exclude-pattern>*/vendor/*</exclude-pattern>
    </fileset>
</ruleset>
